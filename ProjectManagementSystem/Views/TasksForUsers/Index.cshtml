@model IEnumerable<ProjectManagementSystem.Models.TasksForUser>

@{
    ViewData["Title"] = "Index";
}
@{
    bool a = User.IsInRole("admin");
    bool dummy = User.IsInRole("admin") || User.IsInRole("TeamLeader");

}
<h1>Index</h1>
@{
    if (dummy)
    {
        <p>
        <a asp-action="CreateSelectProject">Create New</a>
        </p>
    }
}
<h5 style="color:red">
    @TempData["HataMesaji"]
</h5>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.taskForUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.taskDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.taskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.taskForUserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.project.projectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.taskDeadline)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.taskDescription)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.taskForUserID">Details</a> |

                    @if(dummy)
                    {
                        <a asp-action="Edit" asp-route-id="@item.taskForUserID">Edit</a>
                        <a asp-action = "Delete" asp-route-id="@item.taskForUserID">Delete</a>
                    }
                   
            </td>
        </tr>
}
    </tbody>
</table>
